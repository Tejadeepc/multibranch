pipeline {
    agent any 
    tools {
        maven 'MAVEN_3.9.7'
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('VCS') {
            git url: 'https://github.com/Tejadeepc/spring-petclinic.git',
                 branch: 'preftest'
        }
    }
        stage('build') {
         steps {
            sh 'building code ....'
            sh 'static code analysis'
            sh 'archive the package into jfrog'
        
        }
    }
        stage('deploy') {
         steps {
            sh 'deploying to production'
        }
    }
        stage('test') {
         steps {
            sh 'run end to end performance tests'
            sh 'display test results'
         }
        }
}