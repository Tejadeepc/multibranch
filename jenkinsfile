pipeline {
    agent any 
    tools {
        maven 'maven3.8.7'
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('VCS') {
          steps { 
            git url: 'https://github.com/Tejadeepc/spring-petclinic.git',
                 branch: 'dev'
        }
    }
        stage('build') {
         steps {
            sh 'echo building code ....'
            sh 'echo static code analysis'
            sh 'echo archive the package into jfrog'
        
        }
    }
        stage('deploy') {
         steps {
            sh 'echo deploying to production'
        }
    }
}