pipeline {
    agent any 
    tools {
        maven 'MAVEN_3.9.7'
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('VCS') {
            git url: 'https://github.com/Tejadeepc/spring-petclinic.git',
                 branch: 'main'
        }
    }
    stage('build') {
        step {
            sh 'building code ....'
            sh 'static code analysis'
            sh 'archive the package into jfrog'
        
        }
    }
    stage('system test environment')
    {
        steps {
            sh 'using terraform create environment'
            sh 'use kubectl to deploy'
            sh 'run end to end system tests'
        }
    }
    stage('deploy') {
        steps {
            sh 'deploying to production'
        }
    }
}